<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login-signup">
        <h1>edit <%= resource_name.to_s.humanize %></h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        label: "password",
                        input_html: { autocomplete: "new-password", class: "form-radius" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        label: "password confirmation",
                        input_html: { autocomplete: "new-password", class: "form-radius" } %>
            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        label: "current password",
                        input_html: { autocomplete: "current-password", class: "form-radius" } %>
          </div>
          <div class="btn-container">
            <div class="form-actions">
              <%= f.button :submit, "update", class: "a_btn material" %>
            </div>
          </div>
        <% end %>

        <h2>cancel my account</h2>

        <p>unhappy? <%= link_to "cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "back", :back %>
      </div>
    </div>
  </div>
</div>
